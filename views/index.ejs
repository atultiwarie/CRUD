<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>CRUD with Tailwind</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 text-gray-800">
    <div class="max-w-3xl mx-auto py-10">
        <h1 class="text-3xl font-bold mb-6 text-center">User CRUD Panel</h1>

        <!--  User Form -->
        <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-6" 
            action="/create" method="POST">
            <h2 class="text-xl font-semibold mb-4">Add New User</h2>
            <div class="mb-4">
                <label class="block mb-1 font-medium">Name</label>
                <input type="text" name="name" class="w-full border rounded px-3 py-2" placeholder="Enter name">
            </div>
            <div class="mb-4">
                <label class="block mb-1 font-medium">Username</label>
                <input type="text" name="username" class="w-full border rounded px-3 py-2" placeholder="Enter username">
            </div>
            <div class="mb-4">
                <label class="block mb-1 font-medium">Email</label>
                <input type="email" name="email" class="w-full border rounded px-3 py-2" placeholder="Enter email">
            </div>
            <button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Create</button>
        </form>

        <!-- User List -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% users.forEach((user)=> { %>
            <div class="bg-white shadow-lg rounded-xl p-6 border border-gray-200 hover:shadow-xl transition duration-300">
                <h3 class="text-lg font-bold mb-2 text-gray-800">ðŸ‘¤ <%= user.name %>
                </h3>
                <p class="text-sm text-gray-600 mb-1"><strong>Username:</strong>
                    <%= user.username %>
                </p>
                <p class="text-sm text-gray-600 mb-4"><strong>Email:</strong>
                    <%= user.email %>
                </p>
                <div class="flex space-x-2">
                    <a href="/update/<%= user._id%>" class="bg-yellow-500 text-white px-4 py-1 rounded cursor-pointer">Edit</a>
                    <a href="/delete/<%=user._id%>" class="bg-red-500 text-white px-4 py-1 rounded cursor-pointer">Delete</a>
                </div>
            </div>
            <% }) %>
    </div>

    </div>
</body>

</html>